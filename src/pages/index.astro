---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import SocialPill from '../components/SocialPill.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
import Experience from '../components/Experience.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
import Education from '../components/Education.astro';
---

<Layout
  title="Porfolio de Sergi - Desarrollador y Programador Web Full Stack"
  description="Contrata a Sergi para crear tu aplicación web o móvil. Desarrollador Web. Especializado en crear aplicaciones únicas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-40 mb-4"
        src="/pfp.webp"
        alt="Sergi photo"
      />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, i'm Sergi Casiano<a
          href="https://www.linkedin.com/in/sergi-casiano-88a096273/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <LinkedInIcon
            href="https://www.linkedin.com/in/sergi-casiano-88a096273/"
            class="size-4 md:size-8"
          />
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span>Full Stack Developer - </span><span
          class="text-yellow-800 dark:text-yellow-200"
        >
          Web developer.</span
        >
        <span class="text-red-800 dark:text-red-200">
          Based in Alicante, España</span
        >.
        <span class="text-sky-800 dark:text-sky-200"
          >Specialized in creating unique applications.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/sergi-casiano-88a096273/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/sergiics9">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:sergi20031005@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          sergi20031005@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="Experience">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Briefcase class="size-7" />
        Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="Education">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Briefcase class="size-7" />
        Education
      </h2>
      <Education />
    </SectionContainer>

    <SectionContainer id="Projects">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
